 CREATE TABLE tbl_account (
  id int(11) NOT NULL auto_increment primary key,
  accnumber varchar(13) default NULL,
  pass varchar(50) default NULL,
  balance int(11) default 50,
  code varchar(45) default NULL,
  acctype varchar(13) default NULL,
  def tinyint(1) default 0,
  cardnumber varchar(45) default NULL,
  secondpin varchar(45) default NULL,
  sheba varchar(45) default NULL,

  UNIQUE KEY index2 (code,acctype)
);